@model MusicApp.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
}
<div class="flex justify-center items-center min-h-[60vh]">
    <form asp-action="Profile" method="post" enctype="multipart/form-data" class="bg-white dark:bg-ytm-bg-secondary rounded-xl shadow-lg p-8 w-full max-w-md space-y-6 border border-ytm-border-color">
        <div class="flex flex-col items-center mb-4">
            <img src="@(string.IsNullOrEmpty(Model.ProfileImageUrl) ? "/assets/default-profile.png" : Model.ProfileImageUrl)" alt="Profile Picture" class="w-28 h-28 rounded-full border-4 border-ytm-accent-red object-cover shadow mb-2" onerror="this.onerror=null; this.src='/assets/default-profile.png';">
            <label class="block text-sm font-medium text-ytm-text-secondary mt-2">Change Profile Picture
                <input type="file" name="ProfileImage" accept="image/*" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-ytm-accent-red file:text-white hover:file:bg-red-700 mt-2" />
            </label>
        </div>
        <div>
            <label class="block text-sm font-medium text-ytm-text-secondary mb-1">Full Name</label>
            <input asp-for="FullName" class="input w-full" />
            <span asp-validation-for="FullName" class="text-danger text-xs"></span>
        </div>
        <div>
            <label class="block text-sm font-medium text-ytm-text-secondary mb-1">Username</label>
            <input asp-for="Username" class="input w-full" />
            <span asp-validation-for="Username" class="text-danger text-xs"></span>
        </div>
        <div>
            <label class="block text-sm font-medium text-ytm-text-secondary mb-1">Bio</label>
            <textarea asp-for="Bio" class="input w-full min-h-[80px] resize-none"></textarea>
            <span asp-validation-for="Bio" class="text-danger text-xs"></span>
        </div>
        <div class="flex justify-end">
            <button type="submit" class="button-primary py-2 px-6 rounded-lg font-semibold">Save Changes</button>
        </div>
    </form>
</div>
<style>
    .input {
        background: var(--ytm-bg-tertiary);
        border: 1px solid var(--ytm-border-color);
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
        color: var(--ytm-text-primary);
        font-size: 1rem;
        margin-bottom: 0.25rem;
        transition: border-color 0.2s;
    }
    .input:focus {
        outline: none;
        border-color: var(--ytm-accent-red);
    }
    .button-primary {
        background-color: var(--ytm-accent-red);
        color: var(--ytm-text-primary);
        border: none;
    }
    .button-primary:hover {
        background-color: #D60000;
    }
</style>