@model MusicApp.ViewModels.AlbumCreateViewModel
@{
    ViewBag.Title = "Add New Album";
}

<div class="min-h-screen flex items-center justify-center bg-[var(--ytm-bg-primary)] py-8">
    <div class="w-full max-w-lg">
        <div class="bg-[var(--ytm-bg-secondary)] rounded-xl shadow-xl border border-[var(--ytm-border-color)]">
            <div class="px-8 py-6 border-b border-[var(--ytm-border-color)]">
                <h2 class="text-2xl font-bold text-[var(--ytm-text-primary)] mb-0">Add New Album</h2>
            </div>
            <div class="px-8 py-6">
                <form asp-action="Create" method="post" class="space-y-5">
                    <div>
                        <label asp-for="Title" class="block text-sm font-medium text-[var(--ytm-text-primary)] mb-1">Album Title</label>
                        <input asp-for="Title" class="w-full rounded-lg bg-[var(--ytm-bg-input)] border border-[var(--ytm-border-color)] text-[var(--ytm-text-primary)] placeholder-[var(--ytm-text-secondary)] focus:ring-2 focus:ring-[var(--ytm-accent-red)] focus:border-[var(--ytm-accent-red)] transition" placeholder="Enter album title" />
                        <span asp-validation-for="Title" class="text-[var(--ytm-accent-red)] text-xs"></span>
                    </div>
                    <div>
                        <label asp-for="ArtistId" class="block text-sm font-medium text-[var(--ytm-text-primary)] mb-1">Artist</label>
                        <select asp-for="ArtistId" class="w-full rounded-lg bg-[var(--ytm-bg-input)] border border-[var(--ytm-border-color)] text-[var(--ytm-text-primary)] focus:ring-2 focus:ring-[var(--ytm-accent-red)] focus:border-[var(--ytm-accent-red)] transition">
                            <option value="">Select an Artist</option>
                            @if (ViewBag.Artists != null)
                            {
                                @foreach (var artist in ViewBag.Artists)
                                {
                                    <option value="@artist.Id">@artist.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="ArtistId" class="text-[var(--ytm-accent-red)] text-xs"></span>
                    </div>
                    <div>
                        <label asp-for="ReleaseDate" class="block text-sm font-medium text-[var(--ytm-text-primary)] mb-1">Release Date</label>
                        <input asp-for="ReleaseDate" class="w-full rounded-lg bg-[var(--ytm-bg-input)] border border-[var(--ytm-border-color)] text-[var(--ytm-text-primary)] focus:ring-2 focus:ring-[var(--ytm-accent-red)] focus:border-[var(--ytm-accent-red)] transition" type="date" />
                        <span asp-validation-for="ReleaseDate" class="text-[var(--ytm-accent-red)] text-xs"></span>
                    </div>
                    <div class="flex justify-end space-x-2 pt-2">
                        <a href="@Url.Action("AdminDashboard", "Account")" class="px-4 py-2 rounded-lg bg-[var(--ytm-bg-tertiary)] text-[var(--ytm-text-secondary)] hover:bg-[var(--ytm-bg-secondary)] border border-[var(--ytm-border-color)] transition">Cancel</a>
                        <button type="submit" class="px-4 py-2 rounded-lg bg-[var(--ytm-accent-red)] text-white font-semibold hover:bg-[var(--ytm-accent-red-hover)] transition">Add Album</button>
                    </div>
                </form>
            </div>
        </div>
        @if (ViewBag.ErrorMessage != null) 
        {
            <div class="mt-4 px-4 py-3 rounded-lg bg-[var(--ytm-accent-red)] bg-opacity-20 text-[var(--ytm-accent-red)] border border-[var(--ytm-accent-red)]">@ViewBag.ErrorMessage</div>
        }
    </div>
</div>