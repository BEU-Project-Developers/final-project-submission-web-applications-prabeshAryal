@model IEnumerable<MusicApp.Models.DTOs.AlbumDto>

@{
    ViewData["Title"] = "Albums";
    Random randomGen = new Random();
    string GetRandomImageUrl(int width, int height)
    {
        int randomId = randomGen.Next(1, 1085);
        return $"https://picsum.photos/id/{randomId}/{width}/{height}";
    }
}

@if (User.IsInRole("Admin"))
{
    <!-- Admin Table View - YouTube Music Dark Theme -->
    <div class="min-h-screen bg-gray-900 text-white p-6">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-white">Albums Management</h1>
            <a asp-action="Create" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition-colors flex items-center">
                <i class="fas fa-plus mr-2"></i>Add New Album
            </a>
        </div>

        <div class="bg-gray-800 rounded-lg shadow-xl overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-700">
                        <tr>
                            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-200">Cover</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-200">Title</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-200">Artist</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-200">Year</th>
                            <th class="px-6 py-4 text-center text-sm font-semibold text-gray-200">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-700">
                        @foreach (var album in Model)
                        {
                            <tr class="hover:bg-gray-700 transition-colors">
                                <td class="px-6 py-4">
                                    <img src="@(string.IsNullOrEmpty(album.CoverImageUrl) ? GetRandomImageUrl(48, 48) : album.CoverImageUrl)" 
                                         class="w-12 h-12 rounded-lg object-cover" 
                                         alt="@album.Title cover" />
                                </td>
                                <td class="px-6 py-4">
                                    <div class="font-medium text-white">@album.Title</div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-gray-300">@album.ArtistName</div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-gray-300">@album.Year</div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex justify-center space-x-2">
                                        <a asp-action="Details" asp-route-id="@album.Id" 
                                           class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm transition-colors">
                                            <i class="fas fa-eye mr-1"></i>View
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@album.Id" 
                                           class="bg-yellow-600 hover:bg-yellow-700 text-white px-3 py-1 rounded text-sm transition-colors">
                                            <i class="fas fa-edit mr-1"></i>Edit
                                        </a>
                                        <form asp-action="DeleteConfirmed" asp-route-id="@album.Id" method="post" style="display: inline;" 
                                              onsubmit="return confirm('Are you sure you want to delete this album?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" 
                                                    class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm transition-colors">
                                                <i class="fas fa-trash mr-1"></i>Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-12">
                <i class="fas fa-compact-disc text-6xl text-gray-600 mb-4"></i>
                <h3 class="text-xl text-gray-400 mb-2">No albums found</h3>
                <p class="text-gray-500">Start by adding your first album!</p>
            </div>
        }
    </div>
}
else
{
    <!-- User Album Grid View - YouTube Music Style -->
    <div class="min-h-screen bg-gray-900 text-white">
        <div class="container mx-auto px-4 py-8">
            <div class="flex justify-between items-center mb-8">
                <h1 class="text-4xl font-bold text-white">Albums</h1>
                <div class="text-gray-400">
                    @Model.Count() albums available
                </div>
            </div>

            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4">
                @foreach (var album in Model)
                {
                    <div class="group cursor-pointer" onclick="window.location.href='@Url.Action("Details", new { id = album.Id })'">
                        <div class="relative overflow-hidden rounded-lg bg-gray-800 hover:bg-gray-700 transition-colors">
                            <div class="aspect-square relative">
                                <img src="@(string.IsNullOrEmpty(album.CoverImageUrl) ? GetRandomImageUrl(300, 300) : album.CoverImageUrl)" 
                                     class="w-full h-full object-cover" 
                                     alt="@album.Title cover"
                                     onerror="this.src='https://placehold.co/300x300/374151/9CA3AF?text=Album';" />
                                
                                <!-- Play button overlay -->
                                <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                                    <div class="w-12 h-12 bg-red-600 rounded-full flex items-center justify-center hover:bg-red-700 transition-colors">
                                        <i class="fas fa-play text-white ml-1"></i>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="p-4">
                                <h3 class="font-semibold text-white truncate" title="@album.Title">@album.Title</h3>
                                <p class="text-sm text-gray-400 truncate">@album.ArtistName</p>
                                <p class="text-xs text-gray-500">@album.Year</p>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-12">
                    <i class="fas fa-compact-disc text-6xl text-gray-600 mb-4"></i>
                    <h3 class="text-xl text-gray-400 mb-2">No albums available</h3>
                    <p class="text-gray-500">Check back later for new releases!</p>
                </div>
            }
        </div>
    </div>
}

