@model MusicApp.Models.DTOs.AlbumDto
@{
    ViewData["Title"] = "Delete Album";
}

<h2>Delete Album</h2>
<div class="alert alert-danger">Are you sure you want to delete this album?</div>
<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>
    <dt class="col-sm-2">Artist</dt>
    <dd class="col-sm-10">@Model.ArtistName</dd>
    <dt class="col-sm-2">Year</dt>
    <dd class="col-sm-10">@Model.Year</dd>
</dl>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
