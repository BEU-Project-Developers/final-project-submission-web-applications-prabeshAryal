@model IEnumerable<MusicApp.Models.DTOs.SongDto>

@{
    ViewData["Title"] = "Songs";
}

@if (User.IsInRole("Admin"))
{
    <!-- Admin Table View -->
    <div class="min-h-screen bg-gray-900 text-white p-6">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold">Songs Management</h1>
            <a asp-action="Create" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition-colors">
                <i class="fas fa-plus mr-2"></i>Add New Song
            </a>
        </div>

        <div class="bg-gray-800 rounded-lg shadow-xl overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-700">
                        <tr>
                            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-200">Title</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-200">Artist</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-200">Album</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-200">Duration</th>
                            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-200">Genre</th>
                            <th class="px-6 py-4 text-center text-sm font-semibold text-gray-200">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-700">
                        @foreach (var song in Model)
                        {
                            <tr class="hover:bg-gray-700 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="font-medium text-white">@song.Title</div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-gray-300">@song.ArtistName</div>
                                </td>                                <td class="px-6 py-4">
                                    <div class="text-gray-300">@song.AlbumTitle</div>
                                </td>                                <td class="px-6 py-4">
                                    <div class="text-gray-300">
                                        @if (song.Duration != TimeSpan.Zero)
                                        {
                                            @song.Duration.ToString(@"mm\:ss")
                                        }
                                        else
                                        {
                                            @:--:--
                                        }
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-gray-300">@song.Genre</div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex justify-center space-x-2">
                                        <a asp-action="Details" asp-route-id="@song.Id" 
                                           class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm transition-colors">
                                            <i class="fas fa-eye mr-1"></i>View
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@song.Id" 
                                           class="bg-yellow-600 hover:bg-yellow-700 text-white px-3 py-1 rounded text-sm transition-colors">
                                            <i class="fas fa-edit mr-1"></i>Edit
                                        </a>
                                        <form asp-action="DeleteConfirmed" asp-route-id="@song.Id" method="post" style="display: inline;" 
                                              onsubmit="return confirm('Are you sure you want to delete this song?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" 
                                                    class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm transition-colors">
                                                <i class="fas fa-trash mr-1"></i>Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <!-- User-Friendly Song List View -->
    <div class="min-h-screen bg-gray-900 text-white">
        <div class="container mx-auto px-4 py-8">
            <div class="flex justify-between items-center mb-8">
                <h1 class="text-4xl font-bold text-white">Songs</h1>
                <div class="text-gray-400">
                    @Model.Count() songs available
                </div>
            </div>

            <div class="space-y-4">
                @foreach (var song in Model)
                {
                    <div class="bg-gray-800 rounded-lg p-4 hover:bg-gray-700 transition-colors cursor-pointer" 
                         onclick="window.location.href='@Url.Action("Details", new { id = song.Id })'">
                        <div class="flex items-center space-x-4">
                            <div class="w-16 h-16 bg-gray-600 rounded-lg flex items-center justify-center">
                                <i class="fas fa-music text-2xl text-gray-400"></i>
                            </div>
                            <div class="flex-1">
                                <div class="font-semibold text-lg text-white">@song.Title</div>                                <div class="text-gray-400">@song.ArtistName</div>
                                @if (!string.IsNullOrEmpty(song.AlbumTitle))
                                {
                                    <div class="text-sm text-gray-500">@song.AlbumTitle</div>
                                }
                            </div>                            <div class="text-right">
                                @if (song.Duration != TimeSpan.Zero)
                                {
                                    <div class="text-gray-400">
                                        @song.Duration.ToString(@"mm\:ss")
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(song.Genre))
                                {
                                    <div class="text-xs text-gray-500 uppercase">@song.Genre</div>
                                }
                            </div>
                            <div class="text-gray-400 hover:text-white transition-colors">
                                <i class="fas fa-play-circle text-2xl"></i>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-12">
                    <i class="fas fa-music text-6xl text-gray-600 mb-4"></i>
                    <h3 class="text-xl text-gray-400 mb-2">No songs available</h3>
                    <p class="text-gray-500">Check back later for new music!</p>
                </div>
            }
        </div>
    </div>
}