@model MusicApp.Models.DTOs.SongDto
@{
    ViewData["Title"] = "Delete Song";
}

<h2>Delete Song</h2>
<div class="alert alert-danger">Are you sure you want to delete this song?</div>
<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>
    <dt class="col-sm-2">Artist</dt>
    <dd class="col-sm-10">@Model.ArtistName</dd>
    <dt class="col-sm-2">Album</dt>
    <dd class="col-sm-10">@Model.AlbumTitle</dd>
    <dt class="col-sm-2">Duration</dt>
    <dd class="col-sm-10">@Model.Duration</dd>
</dl>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
