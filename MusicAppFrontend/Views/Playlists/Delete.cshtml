@model MusicApp.Models.DTOs.PlaylistDto

@{
    ViewData["Title"] = "Delete Playlist";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="card shadow bg-gray-800 text-white border-0">
                <div class="card-header bg-red-600 text-white">
                    <h4 class="mb-0">Delete Playlist</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">Warning!</h5>
                        <p>Are you sure you want to delete this playlist? This action cannot be undone.</p>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/assets/default-playlist.png" : Model.CoverImageUrl)" 
                                 alt="@Model.Name" class="img-thumbnail me-3" style="max-width: 100px;" />
                            <div>
                                <h5 class="mb-1">@Model.Name</h5>
                                <p class="text-muted mb-0">@Model.SongCount songs</p>
                                <p class="text-muted mb-0">Created by @Model.Username on @Model.CreatedAt.ToString("MMM d, yyyy")</p>
                            </div>
                        </div>
                        <p class="mb-0">@Model.Description</p>
                    </div>

                    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you absolutely sure you want to delete this playlist?');">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Playlist
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>