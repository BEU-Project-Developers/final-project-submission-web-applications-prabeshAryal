@model MusicApp.Models.DTOs.PlaylistDto

@{
    ViewData["Title"] = "Edit Playlist";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="card shadow" style="background-color: var(--ytm-bg-secondary); color: var(--ytm-text-primary);">
                <div class="card-header" style="background-color: var(--ytm-accent-red); color: var(--ytm-text-primary);">
                    <h4 class="mb-0">Edit Playlist</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Playlist Name</label>
                            <input asp-for="Name" class="form-control bg-dark text-light" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control bg-dark text-light" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CoverImageUrl" class="form-label">Cover Image</label>
                            @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                            {
                                <div class="mb-2">
                                    <img src="@Model.CoverImageUrl" alt="Current cover" class="img-thumbnail" style="max-width: 200px;" />
                                </div>
                            }
                            <input type="file" name="coverImage" class="form-control bg-dark text-light" accept="image/*" />
                            <small class="form-text text-muted">Leave empty to keep current image</small>
                            <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsPublic" class="form-check-input" />
                            <label asp-for="IsPublic" class="form-check-label">Make this playlist public</label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Details
                            </a>
                            <button type="submit" class="btn" style="background-color: var(--ytm-accent-red); color: var(--ytm-text-primary);">
                                <i class="bi bi-check2"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}