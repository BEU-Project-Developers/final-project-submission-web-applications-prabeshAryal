@model dynamic

@{
    var title = ViewBag.EmptyTitle ?? "No Data Available";
    var message = ViewBag.EmptyMessage ?? "There are currently no items to display.";
    var icon = ViewBag.EmptyIcon ?? "bi-inbox";
    var actionText = ViewBag.EmptyActionText;
    var actionUrl = ViewBag.EmptyActionUrl;
}

<div class="text-center py-5">
    <div class="empty-state">
        <div class="mb-4">
            <i class="@icon text-muted" style="font-size: 4rem;"></i>
        </div>
        <h4 class="text-muted mb-3">@title</h4>
        <p class="text-muted mb-4">@message</p>
        
        @if (!string.IsNullOrEmpty(actionText) && !string.IsNullOrEmpty(actionUrl))
        {
            <a href="@actionUrl" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>
                @actionText
            </a>
        }
    </div>
</div>

<style>
    .empty-state {
        max-width: 400px;
        margin: 0 auto;
        padding: 2rem;
    }
    
    .empty-state i {
        opacity: 0.5;
    }
    
    .empty-state h4 {
        font-weight: 500;
    }
    
    .empty-state p {
        font-size: 1.1rem;
        line-height: 1.6;
    }
</style>
