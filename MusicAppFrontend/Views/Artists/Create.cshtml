@model MusicApp.ViewModels.ArtistCreateViewModel
@{
    ViewBag.Title = "Add New Artist";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title mb-0">Add New Artist</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label">Artist Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter artist name" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Country" class="form-label">Country</label>
                                    <input asp-for="Country" class="form-control" placeholder="Enter country" />
                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Bio" class="form-label">Biography</label>
                            <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Enter artist biography"></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Genre" class="form-label">Genre</label>
                                    <input asp-for="Genre" class="form-control" placeholder="Enter genre" />
                                    <span asp-validation-for="Genre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="FormedDate" class="form-label">Formed Date</label>
                                    <input asp-for="FormedDate" class="form-control" type="date" />
                                    <span asp-validation-for="FormedDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="MonthlyListeners" class="form-label">Monthly Listeners</label>
                                    <input asp-for="MonthlyListeners" class="form-control" type="number" min="0" placeholder="0" />
                                    <span asp-validation-for="MonthlyListeners" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("AdminDashboard", "Account")" class="btn btn-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">Add Artist</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.ErrorMessage != null) 
{
    <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
}
