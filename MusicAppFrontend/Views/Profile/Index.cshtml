<!-- Views/Profile/Index.cshtml -->
@model MusicApp.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <div class="row">
        <!-- Profile Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="card border-0 shadow">
                <div class="card-body text-center">
                    <img src="@(string.IsNullOrEmpty(Model.ProfileImageUrl) ? "/assets/default-profile.png" : Model.ProfileImageUrl)" 
                         class="rounded-circle mb-3" width="120" height="120" alt="Profile Image"
                         onerror="this.src='/assets/default-profile.png';">
                    <h4>@Model.Username</h4>
                    <p class="text-muted">@Model.MembershipStatus</p>

                    <div class="d-grid gap-2 mt-3">
                        <button class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </button>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-around text-center">
                        <div>
                            <h5>@Model.PlaylistsCount</h5>
                            <small class="text-muted">Playlists</small>
                        </div>
                        <div>
                            <h5>@Model.FollowersCount</h5>
                            <small class="text-muted">Followers</small>
                        </div>
                        <div>
                            <h5>@Model.FollowingCount</h5>
                            <small class="text-muted">Following</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="list-group mt-4 shadow-sm">
                <a href="#" class="list-group-item list-group-item-action active">
                    <i class="bi bi-person me-2"></i> Profile Overview
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <i class="bi bi-music-note-list me-2"></i> My Playlists
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <i class="bi bi-heart me-2"></i> Favorite Tracks
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <i class="bi bi-people me-2"></i> Following
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <i class="bi bi-gear me-2"></i> Account Settings
                </a>
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="list-group-item list-group-item-action w-100 text-start border-0">
                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </button>
                </form>
            </div>
        </div>

        <!-- Profile Content -->
        <div class="col-lg-9">
            <!-- Profile Stats -->
            <div class="row mb-4">
                <div class="col-md-4 mb-3">
                    <div class="card bg-primary text-white h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-white-50">Total Listening Time</h6>
                                    <h3 class="mb-0">@Model.TotalListeningTime</h3>
                                </div>
                                <i class="bi bi-clock-history fs-1 text-white-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card bg-success text-white h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-white-50">Top Genre</h6>
                                    <h3 class="mb-0">@Model.TopGenre</h3>
                                </div>
                                <i class="bi bi-music-note-beamed fs-1 text-white-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card bg-info text-white h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-white-50">Favorite Artist</h6>
                                    <h3 class="mb-0">@Model.FavoriteArtist</h3>
                                </div>
                                <i class="bi bi-mic fs-1 text-white-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recently Played -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recently Played</h5>
                    <a href="#" class="btn btn-sm btn-outline-secondary">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var track in Model.RecentlyPlayedTracks)
                        {
                            <div class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <img src="@(string.IsNullOrEmpty(track.CoverImageUrl) ? "/assets/default-profile.png" : track.CoverImageUrl)" 
                                             width="50" height="50" class="me-3" alt="Song Cover"
                                             onerror="this.src='/assets/default-profile.png';">
                                        <div>
                                            <h6 class="mb-0">@track.SongTitle</h6>
                                            <small class="text-muted">@track.ArtistName • @track.AlbumName</small>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <small class="text-muted me-3">@track.Duration</small>
                                        <button class="btn btn-sm btn-outline-secondary rounded-circle">
                                            <i class="bi bi-play-fill"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Top Artists -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Top Artists</h5>
                </div>
                <div class="card-body">
                    <div class="row row-cols-2 row-cols-md-4 g-3">
                        @foreach (var artist in Model.TopArtists)
                        {
                            <div class="col text-center">
                                <img src="@(string.IsNullOrEmpty(artist.ArtistImageUrl) ? "/assets/default-profile.png" : artist.ArtistImageUrl)" 
                                     class="rounded-circle mb-2" width="80" height="80" alt="@artist.ArtistName"
                                     onerror="this.src='/assets/default-profile.png';">
                                <h6>@artist.ArtistName</h6>
                                <p class="text-muted small">@artist.PlayCount plays</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Activity Feed -->
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Recent Activity</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var activity in Model.ActivityFeedItems)
                        {
                            <div class="list-group-item">
                                <div class="d-flex">
                                    <div class="me-3">
                                        <span class="badge rounded-circle p-2" style="background-color: @(activity.Type == "playlist_created" ? "var(--bs-primary)" : 
                                                                                activity.Type == "song_liked" ? "var(--bs-danger)" : 
                                                                                activity.Type == "artist_followed" ? "var(--bs-success)" : 
                                                                                activity.Type == "album_added" ? "var(--bs-info)" : 
                                                                                "var(--bs-secondary)")">
                                            <i class="@(activity.Type == "playlist_created" ? "bi bi-music-note-list" : 
                                                       activity.Type == "song_liked" ? "bi bi-heart-fill" : 
                                                       activity.Type == "artist_followed" ? "bi bi-person-plus-fill" : 
                                                       activity.Type == "album_added" ? "bi bi-disc-fill" : 
                                                       "bi bi-activity")"></i>
                                        </span>
                                    </div>
                                    <div>
                                        <p class="mb-1">@Html.Raw(activity.Description)</p> @* Use Html.Raw to render HTML in description if needed *@
                                        <small class="text-muted">@(DateTime.Now - activity.Timestamp > TimeSpan.FromDays(365) ? $"{(int)((DateTime.Now - activity.Timestamp).TotalDays / 365)} years ago" :
                                                              DateTime.Now - activity.Timestamp > TimeSpan.FromDays(30) ? $"{(int)((DateTime.Now - activity.Timestamp).TotalDays / 30)} months ago" :
                                                              DateTime.Now - activity.Timestamp > TimeSpan.FromDays(1) ? $"{(int)(DateTime.Now - activity.Timestamp).TotalDays} days ago" :
                                                              DateTime.Now - activity.Timestamp > TimeSpan.FromHours(1) ? $"{(int)(DateTime.Now - activity.Timestamp).TotalHours} hours ago" :
                                                              DateTime.Now - activity.Timestamp > TimeSpan.FromMinutes(1) ? $"{(int)(DateTime.Now - activity.Timestamp).TotalMinutes} minutes ago" :
                                                              "just now")</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a href="#" class="text-decoration-none">View All Activity</a>
                </div>
            </div>
        </div>
    </div>
</div>