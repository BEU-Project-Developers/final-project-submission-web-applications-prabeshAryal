@model IEnumerable<MusicApp.Models.Playlist>

@{
    ViewData["Title"] = "Playlists";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Your Playlists</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Playlist
        </a>
    </div>

    <div class="row">
        <!-- Featured Playlists Section -->
        <div class="col-12 mb-4">
            <div class="card bg-dark text-white">
                <div class="card-header">
                    <h4 class="mb-0">Featured Playlists</h4>
                </div>
                <div class="card-body pb-0">
                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 pb-3">
                        @foreach (var playlist in Model.Where(p => p.IsPublic).Take(4))
                        {
                            <div class="col">
                                <div class="card h-100 bg-dark border-secondary playlist-card">
                                    <img src="@(string.IsNullOrEmpty(playlist.CoverImageUrl) ? "/img/default-playlist.jpg" : playlist.CoverImageUrl)"
                                         class="card-img-top" alt="@playlist.Name">
                                    <div class="card-body text-white">
                                        <h5 class="card-title">@playlist.Name</h5>
                                        <p class="card-text small">@playlist.Description</p>
                                    </div>
                                    <div class="card-footer bg-transparent border-top-0">
                                        <div class="d-flex justify-content-between">
                                            <span class="text-muted">@playlist.SongIds.Count songs</span>
                                            <button class="btn btn-sm btn-success rounded-circle">
                                                <i class="bi bi-play-fill"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- All Playlists -->
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="true" href="#">All Playlists</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Public</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Private</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th width="50">#</th>
                                    <th>Playlist</th>
                                    <th>Tracks</th>
                                    <th>Privacy</th>
                                    <th width="150">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var playlist in Model)
                                {
                                    <tr>
                                        <td>@playlist.Id</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@(string.IsNullOrEmpty(playlist.CoverImageUrl) ? "/img/default-playlist.jpg" : playlist.CoverImageUrl)"
                                                     width="50" height="50" class="rounded me-3" alt="@playlist.Name">
                                                <div>
                                                    <h6 class="mb-0">@playlist.Name</h6>
                                                    <small class="text-muted">@(playlist.Description?.Length > 50 ? playlist.Description.Substring(0, 50) + "..." : playlist.Description)</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@playlist.SongIds.Count</td>
                                        <td>
                                            @if (playlist.IsPublic)
                                            {
                                                <span class="badge bg-success">Public</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Private</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <button class="btn btn-sm btn-success">
                                                    <i class="bi bi-play-fill"></i>
                                                </button>
                                                <a asp-action="Edit" asp-route-id="@playlist.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- If no playlists exist, show this message -->
                    @if (!Model.Any())
                    {
                        <div class="text-center my-5 py-5">
                            <i class="bi bi-music-note-list fs-1 text-muted"></i>
                            <h4 class="mt-3">No playlists yet</h4>
                            <p class="text-muted">Create your first playlist to start organizing your music.</p>
                            <a asp-action="Create" class="btn btn-primary mt-2">
                                <i class="bi bi-plus-circle"></i> Create New Playlist
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .playlist-card {
        transition: all 0.3s ease;
    }

        .playlist-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }
</style>