@model MusicApp.Models.Playlist

@{
    ViewData["Title"] = "Delete Playlist";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Playlist</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5>Are you sure you want to delete this playlist?</h5>
                        <p>This action cannot be undone.</p>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <img src="@Model.CoverImageUrl" alt="@Model.Name" class="img-thumbnail me-3" style="max-width: 100px;" />
                            <div>
                                <h5 class="mb-1">@Model.Name</h5>
                                <p class="text-muted mb-0">@Model.SongCount songs</p>
                            </div>
                        </div>
                        <p class="mb-0">@Model.Description</p>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete Playlist</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 