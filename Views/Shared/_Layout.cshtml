@* Views/Shared/_Layout.cshtml (YouTube Music Style - Fixed) *@
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
@* Default to dark theme *@
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Music App</title>

    @* Bootstrap CSS - Base framework *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    @* Bootstrap Icons *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    @* Google Font (Roboto is close to YT Music's font) *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    @* Link to your site.css - Custom styles will override Bootstrap *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @* --- Custom Styles for YouTube Music Look --- *@
</head>
<body class="sidebar-collapsed">
    @* Start with sidebar collapsed on larger screens *@

    <header class="top-bar">
        @* Sidebar Toggle Buttons *@
        <button id="sidebar-toggle" class="sidebar-toggle-btn d-none d-lg-block">
            @* Hide on md and below *@
            <i class="bi bi-list"></i>
        </button>
        <button id="mobile-sidebar-toggle" class="mobile-sidebar-toggle d-lg-none">
            @* Show only on md and below *@
            <i class="bi bi-list"></i>
        </button>

        @* Brand/Logo *@
        <a class="navbar-brand" href="/">
            <i class="bi bi-music-note-beamed"></i>
            <span class="d-none d-sm-inline ms-2">Music App</span> @* Hide text on xs screens *@
        </a>

        @* Search Bar Container *@
        <div class="search-container">
            <div class="input-group">
                <input type="text" class="form-control search-box" placeholder="Search" aria-label="Search">
                <button class="btn search-btn" type="button">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>

        @* Profile Button *@
        <a href="/Profile" class="profile-btn">
            @* Changed to simple anchor for styling *@
            <i class="bi bi-person-circle"></i>
        </a>
    </header>

    <aside class="sidebar" id="sidebar">
        @* Scrollable Navigation Area *@
        <div class="sidebar-sticky-content">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")" href="/">
                        <i class="bi bi-house-door-fill"></i> <span class="sidebar-text">Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Artists" ? "active" : "")" href="/Artists">
                        <i class="bi bi-people-fill"></i> <span class="sidebar-text">Artists</span>
                    </a>
                </li>
                <li class="nav-item">
                    @* --- Changed Icon Here --- *@
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Albums" ? "active" : "")" href="/Albums">
                        <i class="bi bi-disc-fill"></i> <span class="sidebar-text">Albums</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Playlists" ? "active" : "")" href="/Playlists">
                        <i class="bi bi-music-note-list"></i> <span class="sidebar-text">Playlists</span>
                    </a>
                </li>

                <li><hr class="mx-3"></li>

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" && ViewContext.RouteData.Values["action"].ToString() == "About" ? "active" : "")" href="/Home/About">
                        <i class="bi bi-info-circle-fill"></i> <span class="sidebar-text">About</span>
                    </a>
                </li>
            </ul>
        </div>

        @* Non-scrolling bottom part (for theme toggle) *@
        <div class="mt-auto pb-2">
            <hr class="mx-3">
            @* Theme Toggle *@
            <div class="theme-switch-wrapper" onclick="document.getElementById('theme-toggle').click()">
                <div class="theme-switch">
                    <input type="checkbox" id="theme-toggle"> @* Checked state managed by JS *@
                    <span class="slider"></span>
                </div>
                <span class="sidebar-text ms-2">Theme</span> @* Text updated by JS *@
            </div>
        </div>
    </aside>

    <div class="content-wrapper" id="content-wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
