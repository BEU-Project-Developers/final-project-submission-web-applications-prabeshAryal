@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=1000">
    <title>@ViewData["Title"] - Music Club</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body style="min-height:100vh;display:flex;flex-direction:column;">
    <div id="mainblock" style="flex:1 0 auto;display:flex;flex-direction:column;">
        <div id="innerblock">
            <!-- Navigation -->
            <div id="navtabs">
                <a href="/" class="tab-link tp_nav @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" style="letter-spacing:1px;">HOME</a>
                <a href="/Artists" class="tab-link tp_nav @(ViewContext.RouteData.Values["controller"]?.ToString() == "Artists" ? "active" : "")" style="letter-spacing:1px;">ARTISTS</a>
                <a href="/Albums" class="tab-link tp_nav @(ViewContext.RouteData.Values["controller"]?.ToString() == "Albums" ? "active" : "")" style="letter-spacing:1px;">ALBUMS</a>
                <a href="/Playlists" class="tab-link tp_nav @(ViewContext.RouteData.Values["controller"]?.ToString() == "Playlists" ? "active" : "")" style="letter-spacing:1px;">PLAYLISTS</a>
                <a href="/Home/About" class="tab-link tp_nav @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")" style="letter-spacing:1px;">ABOUT US</a>
                <a href="/Home/Contact" class="tab-link tp_nav @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")" style="letter-spacing:1px;">CONTACT US</a>
            </div>
            <!-- Music logo above navigation -->
            <div style="width:1000px;margin:0 auto;text-align:center;padding:18px 0 0 0;">
                <i class="bi bi-music-note-beamed" style="font-size:3.2rem;color:#d32f2f;"></i>
            </div>
            <!-- Banner image below navigation -->
            <div style="width:1000px;margin:0 auto 18px auto;">
                <img src="https://picsum.photos/id/1016/1000/180" alt="Banner" style="width:100%;height:180px;object-fit:cover;border-radius:18px;box-shadow:0 2px 12px rgba(0,0,0,0.10);" />
            </div>
            <!-- Search bar -->
            <div id="searchbar-row" style="margin-bottom:12px;">
                <form method="get" action="@Url.Action("SearchResults", "Home")" id="searchbar-form">
                    <span class="tp_sea">SEARCH</span>
                    <input type="text" name="q" class="tp_text" placeholder="Search" aria-label="Search">
                    <button type="submit" class="tp_go" style="background:none;border:none;padding:0;vertical-align:middle;">
                        <img src="https://picsum.photos/id/1011/20/19" width="20" height="19" alt="Go" />
                    </button>
                </form>
                <div id="top-links">
                    <a href="/Home/About">home</a>
                    <a href="/Home/Contact">contact</a>
                    <a href="#">sitemap</a>
                </div>
            </div>
            <!-- Content panel (two columns) -->
            <div id="contentpanel" class="clearfix bg-[#101624] text-gray-100" style="background:rgba(0,32,64,0.82);border-radius:18px;box-shadow:0 8px 32px rgba(0,0,0,0.18);padding:36px 36px 32px 36px;">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <div id="footerpanel">
        <span class="fp_co flt">&copy; @DateTime.Now.Year - Music Club - All Rights Reserved</span>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>