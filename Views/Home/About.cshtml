<!-- Views/Home/About.cshtml -->
@{
    ViewData["Title"] = "About";
}

<div class="alert alert-info">
    <h4>About Page Purpose</h4>
    <p>This page provides information about the Music App, its features, and its mission.</p>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <h1 class="card-title">About Music App</h1>
        <p class="card-text">
            Music App is a platform designed to help music lovers discover, listen to, and share their favorite music.
            Our mission is to connect people through the power of music.
        </p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h3>Our Mission</h3>
                <p>
                    At Music App, we believe that music has the power to inspire, heal, and bring people together.
                    Our platform is designed to make it easy for you to discover new artists, create and share playlists,
                    and connect with other music enthusiasts.
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h3>Our Team</h3>
                <p>
                    We are a team of passionate music lovers and tech enthusiasts dedicated to creating the best music experience.
                    Our diverse team brings together expertise in music, technology, and user experience to deliver a platform that
                    music lovers will enjoy.
                </p>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4 shadow-sm">
    <div class="card-header">
        <h3>Key Features</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 text-center mb-3">
                <i class="bi bi-music-note-list fs-1 text-primary"></i>
                <h4>Discover Music</h4>
                <p>Find new artists and songs based on your tastes</p>
            </div>
            <div class="col-md-4 text-center mb-3">
                <i class="bi bi-collection-play fs-1 text-primary"></i>
                <h4>Create Playlists</h4>
                <p>Build and customize your own music collections</p>
            </div>
            <div class="col-md-4 text-center mb-3">
                <i class="bi bi-people fs-1 text-primary"></i>
                <h4>Connect</h4>
                <p>Share and explore music with friends</p>
            </div>
        </div>
    </div>
</div>

</div>