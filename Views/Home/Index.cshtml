@{
    ViewData["Title"] = "Home";
    Random randomGen = new Random();
    string GetRandomImageUrl(int width, int height)
    {
        int randomId = randomGen.Next(1, 1085);
        return $"https://picsum.photos/id/{randomId}/{width}/{height}";
    }
    string featuredArtistImageUrl = GetRandomImageUrl(600, 300);
    string albumCoverImageUrl1 = GetRandomImageUrl(300, 300);
    string albumCoverImageUrl2 = GetRandomImageUrl(300, 300);
    string albumCoverImageUrl3 = GetRandomImageUrl(300, 300);
    string albumCoverImageUrl4 = GetRandomImageUrl(300, 300);
    string playlistCoverImageUrl1 = GetRandomImageUrl(300, 300);
    string playlistCoverImageUrl2 = GetRandomImageUrl(300, 300);
    string playlistCoverImageUrl3 = GetRandomImageUrl(300, 300);
    string defaultAlbumUrl = "https://placehold.co/300x300/212121/AAAAAA?text=Album";
    string defaultPlaylistUrl = "https://placehold.co/300x300/212121/AAAAAA?text=Playlist";
    string defaultFeaturedUrl = "https://placehold.co/600x300/212121/AAAAAA?text=Featured";
}

<div class="home-content-wrapper" style="max-width:1000px;margin:0 auto;">
    <div class="row mb-4" style="display:flex;gap:32px;flex-wrap:wrap;">
        <div class="col-lg-6 mb-4 mb-lg-0" style="flex:1 1 350px;min-width:320px;">
            <div class="welcome-section" style="background:#181e2a;padding:2rem;border-radius:12px;border:1px solid #232b3b;display:flex;flex-direction:column;justify-content:center;height:100%;box-shadow:0 2px 12px rgba(0,0,0,0.08);">
                <h2 style="color:#fff;font-weight:500;margin-bottom:0.75rem;">Welcome to Music App</h2>
                <p style="color:#b0b8c1;margin-bottom:1.5rem;font-size:1rem;line-height:1.6;">Your personal music hub. Discover, listen, and share your favorite tunes.</p>
                <div style="display:flex;gap:12px;">
                    <a href="/Albums" class="btn btn-browse" style="background:#d32f2f;color:#fff;border:none;border-radius:20px;padding:0.5rem 1.3rem;font-weight:500;">Browse Albums</a>
                    <a href="/Artists" class="btn btn-account" style="background:#232b3b;color:#fff;border:1px solid #333;border-radius:20px;padding:0.5rem 1.3rem;font-weight:500;">Browse Artists</a>
                </div>
            </div>
        </div>
        <div class="col-lg-6" style="flex:1 1 350px;min-width:320px;">
            <div class="featured-artist-banner" style="position:relative;border-radius:12px;overflow:hidden;min-height:250px;background:#232b3b;box-shadow:0 2px 12px rgba(0,0,0,0.08);">
                <img src="@featuredArtistImageUrl" alt="Featured Artist" style="width:100%;height:250px;object-fit:cover;display:block;">
                <div class="overlay" style="position:absolute;top:0;left:0;right:0;bottom:0;background:linear-gradient(to top,rgba(0,0,0,0.7) 0%,rgba(0,0,0,0) 60%);display:flex;flex-direction:column;justify-content:flex-end;padding:1.5rem;">
                    <h5 style="font-size:1.3rem;font-weight:500;color:#fff;margin-bottom:0.25rem;text-shadow:1px 1px 3px rgba(0,0,0,0.6);">Featured Artist</h5>
                    <p style="font-size:0.9rem;color:rgba(255,255,255,0.8);text-shadow:1px 1px 2px rgba(0,0,0,0.6);margin-bottom:0;">Check out the latest tracks and curated picks.</p>
                </div>
            </div>
        </div>
    </div>
    <h3 class="section-header" style="color:#fff;font-weight:500;font-size:1.5rem;margin-top:2.5rem;margin-bottom:1.5rem;">Popular Albums</h3>
    <div class="row" style="display:flex;gap:32px;flex-wrap:wrap;justify-content:center;">
        @for (int i = 1; i <= 4; i++)
        {
            string albumCoverUrl = i switch
            {
                1 => albumCoverImageUrl1,
                2 => albumCoverImageUrl2,
                3 => albumCoverImageUrl3,
                4 => albumCoverImageUrl4,
                _ => defaultAlbumUrl
            };
            <div style="text-align:center;background:#181e2a;padding:1rem 1.5rem;border-radius:12px;box-shadow:0 2px 8px #2222;margin-bottom:18px;">
                <img src="@albumCoverUrl" alt="Album @i" style="width:120px;height:120px;border-radius:12px;object-fit:cover;box-shadow:0 2px 8px #2222;margin-bottom:10px;">
                <div style="font-weight:bold;color:#fff;">Album Title @i</div>
                <div style="color:#b0b8c1;font-size:0.95em;">Artist Name</div>
            </div>
        }
    </div>
    <h3 class="section-header" style="color:#fff;font-weight:500;font-size:1.5rem;margin-top:2.5rem;margin-bottom:1.5rem;">Featured Playlists</h3>
    <div class="row" style="display:flex;gap:32px;flex-wrap:wrap;justify-content:center;">
        @for (int i = 1; i <= 3; i++)
        {
            string playlistCoverUrl = i switch
            {
                1 => playlistCoverImageUrl1,
                2 => playlistCoverImageUrl2,
                3 => playlistCoverImageUrl3,
                _ => defaultPlaylistUrl
            };
            <div style="text-align:center;background:#181e2a;padding:1rem 1.5rem;border-radius:12px;box-shadow:0 2px 8px #2222;margin-bottom:18px;">
                <img src="@playlistCoverUrl" alt="Playlist @i" style="width:120px;height:120px;border-radius:12px;object-fit:cover;box-shadow:0 2px 8px #2222;margin-bottom:10px;">
                <div style="font-weight:bold;color:#fff;">Playlist @i</div>
                <div style="color:#b0b8c1;font-size:0.95em;">Curated tracks for your mood.</div>
            </div>
        }
    </div>
</div>
